{
  "name": "Charts Display",
  "description": "A plugin to display column, line, and area charts with comma-separated data input",
  "version": "1.0.0",
  "elements": [
    {
      "name": "Charts Display",
      "category": "visual",
      "description": "Display column, line, and area charts with customizable data",
      "icon": "chart-bar",
      "fields": [
        {
          "name": "chart_type",
          "type": "text",
          "display": "Chart Type",
          "default": "column",
          "options": [
            {"label": "Column Chart", "value": "column"},
            {"label": "Line Chart", "value": "line"},
            {"label": "Area Chart", "value": "area"}
          ]
        },
        {
          "name": "x_values",
          "type": "text",
          "display": "X Values (comma-separated)",
          "default": "1,2,3,4,5"
        },
        {
          "name": "y_values",
          "type": "text",
          "display": "Y Values (comma-separated)",
          "default": "10,20,30,40,50"
        },
        {
          "name": "chart_title",
          "type": "text",
          "display": "Chart Title",
          "default": "My Chart"
        },
        {
          "name": "x_axis_label",
          "type": "text",
          "display": "X Axis Label",
          "default": "X Axis"
        },
        {
          "name": "y_axis_label",
          "type": "text",
          "display": "Y Axis Label",
          "default": "Y Axis"
        }
      ]
    }
  ]
} 
